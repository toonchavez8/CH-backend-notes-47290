<main
	class="min-w-full bg-gray-100 p-4 flex flex-col items-center justify-center md:justify-start"
>

	<section class="bg-white p-4 rounded-lg shadow-md max-w-4xl mx-auto w-full">

		<h1 class="text-3xl md:text-4xl font-bold text-indigo-600 mb-4">Hello
			{{user}}</h1>

		{{#if isAdmin}}
			<div class="w-full">
				<table class="min-w-full divide-y divide-gray-200">
					<thead class="bg-indigo-500 rounded-lg overflow-hidden">
						<tr class="rounded-lg overflow-hidden">
							<th class="px-3 py-2 text-white">Fruit</th>
							<th class="px-3 py-2 text-white">Price</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-gray-200">
						{{#each fruits}}
							<tr class="border-t border-b border-indigo-200">
								<td class="px-3 py-2 text-center flex">
									<div class="hidden md:block mr-2">{{emoji}}</div>
									<div>{{name}}</div>
								</td>
								<td class="px-3 py-2 text-center">{{price}}</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		{{else}}
			<div class="w-full md:w-1/3">
				<div class="max-w-sm rounded overflow-hidden shadow-lg mx-auto">
					<div class="px-6 py-4">
						<p class="text-red-500 text-2xl md:text-3xl">😞 Sorry, you are not
							an admin 🍆</p>
					</div>
				</div>
			</div>
		{{/if}}
	</section>

</main>