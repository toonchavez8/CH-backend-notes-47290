<main>
  <section class="text-white">
    <h1 class="text-4xl text-center">All Carts View</h1>

    <div class="overflow-x-auto">
      <table class="min-w-full table-auto">
        <thead>
          <tr>
            <th class="px-4 py-2">User Email</th>
            <th class="px-4 py-2">Cart ID</th>
            <th class="px-4 py-2">Product Title</th>
                       <th class="px-4 py-2">Product Price</th>
            <th class="px-4 py-2">Product Image</th>
            <th class="px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each result}}
            {{#each this.products}}
              <tr>
                <td class="border px-4 py-2">{{../userEmail}}</td>
                <td class="border px-4 py-2">{{../_id}}</td>
                <td class="border px-4 py-2">{{this.productId.title}}</td>

                <td class="border px-4 py-2">${{this.productId.price}}</td>
                <td class="border px-4 py-2">
                  <img
                    src="{{this.productId.thumbnail}}"
                    alt="{{this.productId.title}}"
                    class="w-16 h-16 object-cover"
                  />
                </td>
                <td class="border px-4 py-2">
                  <a href="/carts/{{../_id}}" class=" flex flex-row p-2 text-white justify-center items-center rounded bg-indigo-500 hover:bg-indigo-700 hover:scale-110 transition ease font-bold gap-1 ">View cart
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
</svg>

                  </a>
                </td>
              </tr>
            {{/each}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
</main>
