<main class="w-full flex flex-col items-center justify-center h-full">
	<figure class="bg-white p-4 rounded-lg shadow-md w-96">

		<section class="h-96 overflow-y-scroll" id="log">

		</section>
		<section class="flex mt-1">
			<input
				type="text"
				placeholder="Type your message..."
				class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
				id="chatBox"
			/>
			<button
				class="ml-2 px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:border-red-500"
				id="submitBtn"
				aria-label="Send Message"
			>
				Send
			</button>
		</section>
	</figure>
</main>

<script src="/chatLogic.js"></script>